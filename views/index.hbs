<script>
  var $table = $('#table')

  function initTable() {
    $table.bootstrapTable('destroy').bootstrapTable({
      height: 460,
      locale: $('#locale').val(),
      columns: [
        [{
          title: 'ID',
          field: 'id',
          rowspan: 2,
          align: 'center',
          valign: 'middle'
        }, {
          title: 'Movie Details',
          colspan: 6,
          align: 'center'
        }],
        [{
          field: 'title',
          title: 'Title',
          align: 'center'
        }, {
          field: 'year',
          title: 'Year',
          align: 'center',
        }, {
          field: 'genre',
          title: 'Genre',
          align: 'center'
        }, {
          field: 'director',
          title: 'Director',
          align: 'center'
        }, {
          field: 'actor1',
          title: 'Actor 1',
          align: 'center'
        }, {
          field: 'actor2',
          title: 'Actor 2',
          align: 'center'
        }]
      ]
    })
  }

  $(function() {
    // to change toolbar icons
    $.extend($.fn.bootstrapTable.defaults.icons, {
      columns: "fa-solid fa-table-columns",
      search: "fa-solid fa-magnifying-glass",
      toggleOff: "fa-solid fa-toggle-off",
      toggleOn: "fa-solid fa-toggle-on"
    });



    initTable()

    //$('#locale').change(initTable)
  })
</script>
</body>
</html>